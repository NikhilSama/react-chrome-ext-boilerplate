{
    "manifest_version": 3, 
    "name": "Summarizer",
    "description": "Summarize the contents of the page you are viewing.",
    "version": "3.0", 
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Summarize!"
    }, 
    "options_page": "options.html", 
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"], 
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "activeTab", "scripting"
      ]      
}